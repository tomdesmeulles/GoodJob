{% extends '::layout2.html.twig' %}
 
{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="{{ asset('bundles/enscv/css/cvs.css') }}" type="text/css" media="all" />
{% endblock %}

{% block content %}

    <div id="cvs">
      <!-- <table class="cvs"> -->
        {% for categoryCv in categories %}
          <div>
           
            <div class="category">
              <h1><a href="{{ path('EnsCvBundle_categoryCv', { 'slug': categoryCv.slug }) }}">{{ categoryCv.name }}</a></h1>
            </div>


           {% include 'EnsCvBundle:Cv:list.html.twig' with {'cvs': categoryCv.activecvs} %}
        

          {% if categoryCv.morecvs %}
            <div class="more_jobs">
              Total de  <a href="{{ path('EnsCvBundle_categoryCv', { 'slug': categoryCv.slug }) }}">{{ categoryCv.morecvs }}</a>
              Cvs
            </div>
          {% endif %}

        </div>
      {% endfor %}
    <!-- </table> -->
    </div>
{% endblock %}



