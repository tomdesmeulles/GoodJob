    <!DOCTYPE html>
    <html>
        <head>
            <title>
                {% block title %}
                    Good Job - Le partenaire des geeks
                {% endblock %}
            </title>
            <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
            {% block stylesheets %}
                <link rel="stylesheet" href="{{ asset('bundles/ensgoodjob/css/main.css') }}" type="text/css" media="all" />
            {% endblock %}
            {% block javascripts %}
            {% endblock %}
            <link rel="shortcut icon" href="{{ asset('bundles/ensgoodjob/images/favicon.ico') }}" />
        </head>
        <body>
            <div id="container">

                <div id="header">
                    <div class="content">
                    <h1>
                        <a href="{{ path('EnsGoodJobBundle_homepage') }}">
                            <img src="{{ asset('bundles/ensgoodjob/images/logo.jpg') }}" alt="Good Job - Le partenaire des geeks" />
                        </a>
                    </h1>
                    <div id="sub_header">
                        <div class="post">
                            <h2>Rechercher un candidat</h2>
                            <div>
                                <a href="{{ path('ens_job') }}">Déposer une offre</a>
                            </div>
                        </div>
                        <div class="search">
                            <h2>Rechercher un emploi</h2>
                            <form action="" method="get">
                                <input type="text" name="keywords" id="search_keywords" />
                                <input type="submit" value="search" />
                                <div class="help">
                                  Ecrivez quelques mots clés (ville, pays, poste, ...)
                                </div>
                            </form>
                            </div>
                        </div>
                    </div>
                </div>

                <div id="content">
                    {% for flashMessage in app.session.flashbag.get('notice') %}
                        <div class="flash_notice">
                            {{ flashMessage }}
                        </div>
                    {% endfor %}
                    

                    {% for flashMessage in app.session.flashbag.get('error') %}
                        <div class="flash_error">
                            {{ flashMessage }}
                        </div>
                    {% endfor %}

                    <div class="content">
                        {% block content %}
                        {% endblock %}
                    </div>
                </div>

                <div id="footer">
                    <div class="content">
                        <span class="symfony">
                            <img src="{{ asset('bundles/ensgoodjob/images/jobeet-mini.png') }}" />
                            powered by 
                            <a href="http://www.symfony.com/">
                                <img src="{{ asset('bundles/ensgoodjob/images/symfony.gif') }}" alt="symfony framework" />
                            </a>
                        </span>
                        <ul>
                            <li><a href="">A propos de Good Job</a></li>
                            <li class="feed"><a href="">Flux complet</a></li>
                            <li><a href="">Good Job API</a></li>
                            <li class="last"><a href="">S'abonner</a></li>
                        </ul>
                    </div>
                </div>

            </div>
        </body>
    </html>