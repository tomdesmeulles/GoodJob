    <!DOCTYPE html>
    <html>
        <head>
            <title>
                {% block title %}
                    Good Job - Le partenaire des geeks
                {% endblock %}
            </title>
            <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
            {% block stylesheets %}
                <link rel="stylesheet" href="{{ asset('bundles/ensgoodjob/css/main.css') }}" type="text/css" media="all" />
            {% endblock %}
            {% block javascripts %}
            {% endblock %}
            <link rel="shortcut icon" href="{{ asset('bundles/ensgoodjob/images/favicon.ico') }}" />
        </head>
        <body>
            <div id="container">
                <div id="top-header">
                    <ul>
                        <li class="li-menuHeader">
                                <a href="{{ path('EnsGoodJobBundle_homepage') }}">
                                    <img src="{{ asset('bundles/ensgoodjob/images/logo.jpg') }}" alt="Good Job - Le partenaire des geeks" width="150px" />
                                </a>
                        </li>
<!--                         <li class="toto">
                            <p>
                                "Le partenaire des geeks"
                            </p>
                        </li> -->
                        <li class="li-menuHeader ">
                            <a href="{{ path('ens_job_new') }}" class="menu-header">
                                <p>
                                    Déposer une offre
                                </p>
                            </a>
                        </li>
                        <li class="li-menuHeader ">
                            <a href="{{ path('EnsGoodJobBundle_homepage') }}" class="menu-header">
                                <p>
                                     Rechercher une offre
                                </p>
                            </a>
                        </li>
                       <!--  <li class="li-menuHeader">
                            <h2 class="menu-header">
                                <a href="{{ path('EnsGoodJobBundle_homepage') }}" >
                                    Rechercher une offre
                                </a>
                            </h2>
                        </li> -->
                    <ul>
                </div>
                <div id="side-bar">
                   
                </div>
                <div id="header">
                    <div class="content">

                    <div id="sub_header">
                        <!-- DEPOSER UNE OFFRE -->

<!--                         <div class="post">
                            <h2>Rechercher un candidat</h2>
                            <div>
                                <a href="{{ path('ens_job') }}">Déposer une offre</a>
                            </div>
                        </div> -->
                        <div class="search">
                            <h2>Rechercher une offre</h2>
                            <form action="" method="get">
                                <input type="text" name="keywords" id="search_keywords" />
                                <input type="submit" value="search" />
                                <div class="help">
                                  Ecrivez quelques mots clés (ville, pays, poste, ...)
                                </div>
                            </form>
                            </div>
                        </div>
                    </div>
                </div>


                <div id="content">
                    {% for flashMessage in app.session.flashbag.get('notice') %}
                        <div class="flash_notice">
                            {{ flashMessage }}
                        </div>
                    {% endfor %}
                    

                    {% for flashMessage in app.session.flashbag.get('error') %}
                        <div class="flash_error">
                            {{ flashMessage }}
                        </div>
                    {% endfor %}

                    <div class="content">
                        {% block content %}
                        {% endblock %}
                    </div>
                </div>


                <div id="footer">
                    <div class="content">
                        <span class="symfony">
                            <a href="http://www.symfony.com/">
                                
                            </a>
                        </span>
                        <ul>
                            <li><a href="">A propos de Good Job</a></li>
                            <li class="feed"><a href="">Flux complet</a></li>
                            <li><a href="">Good Job API</a></li>
                            <li class="last"><a href="">S'abonner</a></li>
                        </ul>
                    </div>
                </div>

            </div>
        </body>
    </html>