    <div id="jobs">
        {% for category in categories %}
         <div>
            <div class="category">

                <h1>{{ category.name }}</h1>
            </div>
 

            {% include 'EnsGoodJobBundle:Job:list.html.twig' with {'jobs': category.activejobs} %}
            
        
        

             {% if category.morejobs %}
                <div class="more_jobs">
                    Total de 
                    <a href="{{ path('EnsGoodJobBundle_category', { 'slug': category.slug }) }}">{{ category.morejobs }}</a>
                    offres
                </div>
            {% endif %}

        </div>
        {% endfor %}
    </div>
{% endblock %}
