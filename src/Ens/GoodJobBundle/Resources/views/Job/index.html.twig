{% extends 'EnsGoodJobBundle::layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/ensgoodjob/css/jobs.css') }}" type="text/css" media="all" />
{% endblock %}

{% block content %}

<!-- {{ google_map_container(map) }}
